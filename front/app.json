{
  "expo": {
    "name": "todotodo",
    "slug": "todotodo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash2.png",
      "resizeMode": "contain",
      "backgroundColor": "#8685EF"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/NanumSquareNeoOTF-Lt.otf",
            "./src/assets/fonts/NanumSquareNeoOTF-Rg.otf",
            "./src/assets/fonts/NanumSquareNeoOTF-Bd.otf",
            "./src/assets/fonts/NanumSquareNeoOTF-Eb.otf",
            "./src/assets/fonts/NanumSquareNeoOTF-Hv.otf"
          ]
        }
      ]
    ]
  }
}
